<settings-container xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='https://monkeymanboy.github.io/BSML-Docs/ https://raw.githubusercontent.com/monkeymanboy/BSML-Docs/gh-pages/BSMLSchema.xsd'>
  <settings-submenu text='General'>
    <scrollable-settings-container>
      <clickable-text text='Back' click-event='back' />
      <!--<checkbox text='Show avatars in game' value='avatars-in-game' apply-on-change='true' hover-hint='Show avatars of other players while playing a song' />
      <checkbox text='Show other players blocks' value='blocks-in-game' apply-on-change='true' hover-hint='Show other players blocks while playing a song&#13;&#10;&lt;color=red&gt;Requires "Show Avatars In Game"&lt;/color&gt;' />
      <checkbox text='Show avatars in room' value='avatars-in-room' apply-on-change='true' hover-hint='Show avatars of other players while in room' />
      <checkbox text='Download other players avatars' value='download-avatars' apply-on-change='true' hover-hint='Download other players avatars from ModelSaber' />
      <checkbox text='Separate avatar for multiplayer' value='separate-avatar' apply-on-change='true' hover-hint='Use avatar specified in "Public avatar" instead of your current avatar for multiplayer'  />
      <dropdown-list-setting id='public-avatar-setting' text='Public avatar' value='public-avatar-value' options='public-avatar-options' formatter='public-avatar-formatter' apply-on-change='true' />-->
      <checkbox text='Rich Presence' value='enable-rich-presence' apply-on-change='true' hover-hint='Advertise your presence on Discord or Steam if supported. Allows friends to join your game.' />
      <checkbox text='Spectator mode' value='spectator-mode' apply-on-change='true' hover-hint='&lt;color=red&gt;BETA&lt;/color&gt;&#13;&#10;Watch other players playing a song (e.g. on tournaments)&#13;&#10;&lt;color=red&gt;You can&apos;t play songs yourself while "Spectator Mode" is on!&lt;/color&gt;'  />
      <dropdown-list-setting text='Submit scores' value='submit-scores-value' apply-on-change='true' options='submit-scores-options' hover-hint='Submit scores to the leaderboard' />      
    </scrollable-settings-container>
  </settings-submenu>

  <settings-submenu text='Voice'>
    <scrollable-settings-container>
      <clickable-text text='Back' click-event='back' />
      <checkbox text='Enable voice chat' value='enable-voice-chat' apply-on-change='true' />
      <slider-setting text='Voice chat volume' value='voice-chat-volume' min='0' max='300' increment='1' integer-only='true' apply-on-change='true' />
      <checkbox text='Enable microphone' value='mic-enabled' apply-on-change='true' />
      <checkbox text='Use push to talk' value='push-to-talk' apply-on-change='true' />
      <dropdown-list-setting text='Push to talk button' value='ptt-button-value' apply-on-change='true' options='ptt-button-options' hover-hint='~ptt-hover'/>
      <dropdown-list-setting text='Microphone' value='mic-select-value' apply-on-change='true' options='mic-select-options' hover-hint='Select microphone to use for voice chat'  />
      <settings-submenu text='Input Settings'>
        <scrollable-settings-container>
          <clickable-text text='Back' click-event='back' />
          <slider-setting text='Trigger Threshold' value='trigger-threshold' apply-on-change='true' min='0' max='1' increment='0.05' integer-only='false' formatter='float-percent'/>
          <slider-setting text='Grip Threshold' value='grip-threshold' apply-on-change='true' min='0' max='1' increment='0.05' integer-only='false' formatter='float-percent'/>
          <checkbox text='Enable Haptics' value='enable-haptics' apply-on-change='true' />
          <slider-setting text='Haptic Amplitude' value='haptic-amplitude' apply-on-change='true' min='0' max='1' increment='0.05' integer-only='false' formatter='float-percent'/>
          <slider-setting text='Haptic Duration' value='haptic-duration' apply-on-change='true' min='0' max='1' increment='0.05' integer-only='false' formatter='float-seconds'/>
        </scrollable-settings-container>
      </settings-submenu>
    </scrollable-settings-container>
  </settings-submenu>
</settings-container>